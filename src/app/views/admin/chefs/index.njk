{% extends 'admin/layout.njk' %}

{% block content %}

<div class="chefs__header-title">
    <div>
        <h2>Gerenciar Chefs</h2>
    </div>
    <div>
        <a href="/admin/chefs/create">Novo Chef</a>
    </div>
</div>

<section class="admin__chef-cards">
    {% for chef in chefs %}    
    <div class="admin__chef-card">
        <div class="admin__chef-card-image">    
            <img src="{{chef.avatar_url}}" alt="Imagem de {{chef.name}}">
        </div>            
        <div class="admin__chef-card-content">  
            <h1>{{chef.name}}</h1>
            <a href="/admin/chefs/{{chef.id}}">Visualizar</a>      
        </div>
    </div>
    {% endfor %}    
</section>

{% endblock content %}