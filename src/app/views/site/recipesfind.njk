{% extends 'site/layout2.njk' %}

{% block head %}
    <title>Foodfy | Receitas</title>
{% endblock head %}

{% block content %}

    <div class="find-title">
        <h1>Buscando por "{{filter}}"</h1>    
    </div>

    <section class="cards-receitas">
{% for recipe in recipes %}
    <a href="/receitas/{{recipe.id}}">
        <div class="card-receitas">
            <img src="{{recipe.image}}" alt="imagem de {{itens.title}}">
            <p class="card-title">{{recipe.title}}</p>
            <p class="card-subtitle">{{recipe.author}}</p>
                </div>
            </div>
        </div>
    </a>
 {% endfor %}
    </section>   
    
{% endblock content %}

{% block footer %}

   <footer class="footer-block">
       <div>
           <p>Todos os direitos reservados, receitas Foodfy </p>
       </div>
   </footer>

{% endblock footer %}
