{% extends 'site/layout.njk' %}

{% block head %}
    <title>Foodfy | Receitas</title>
{% endblock head %}

{% block content %}
    <section class="cards-receitas">
{% for itens in item %}    
        <div class="card-receitas">
            <img src="{{itens.image}}" alt="imagem de {{itens.title}}">
            <p class="card-title">{{itens.title}}</p>
            <p class="card-subtitle">{{itens.author}}</p>
                </div>
            </div>
        </div>
 {% endfor %}
    </section>   
    
{% endblock content %}

{% block footer %}

   <footer class="footer-block">
       <div>
           <p>Todos os direitos reservados, receitas Foodfy </p>
       </div>
   </footer>

{% endblock footer %}
